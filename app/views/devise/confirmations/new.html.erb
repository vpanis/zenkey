<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div class="form-devise">
        <h2>Renvoyer les instructions de confirmation</h2>

        <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>
          <%= f.full_error :confirmation_token %>

          <div class="form-inputs">
            <%= f.input :email, placeholder:"dupont@gmail.com", required: true, autofocus: true %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Renvoyer les instructions de confirmation", class:"btn btn-red" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
