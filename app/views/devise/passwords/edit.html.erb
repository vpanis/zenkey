<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div class="form-devise">
        <h2>Modifier mon mot de passe</h2>

        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>

          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>

          <div class="form-inputs">
            <%= f.input :password, label: "Nouveau mot de passe", placeholder:"********", required: true, autofocus: true, hint: ("#{@minimum_password_length} caractÃ¨res minimum" if @minimum_password_length) %>
            <%= f.input :password_confirmation, label: "Confirm your new password", placeholder:"********", required: true %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Modifier mon mot de passe", class:"btn btn-red" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
