<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div class="form-devise">
        <h2>S'inscrire</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email, placeholder:"dupont@gmail.com", required: true, autofocus: true %>
            <%= f.input :password, label: "Mot de passe",  placeholder:"********", required: true, hint: ("#{@minimum_password_length} caractÃ¨res minimum" if @minimum_password_length) %>
            <%= f.input :password_confirmation, label: "Confirmation du mot de passe",  placeholder:"********", required: true %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "S'inscrire", class:"btn btn-danger" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>



