<% if set_grade(user, flat) >= 5 %>

  <% 5.times do %>
    <i class="fa fa-star" aria-hidden="true"></i>
  <% end %>

<% elsif set_grade(user, flat) <= 0 %>

  <% 5.times do %>
    <i class="fa fa-star-o" aria-hidden="true"></i>
  <% end %>

<% elsif set_grade(user, flat) == set_grade(user, flat).floor %>

  <% set_grade(user, flat).floor.times do %>
    <i class="fa fa-star" aria-hidden="true"></i>
  <% end %>
  <% (5 - set_grade(user, flat).floor).times do %>
    <i class="fa fa-star-o" aria-hidden="true"></i>
  <% end %>

<% else %>

  <% set_grade(user, flat).floor.times do %>
    <i class="fa fa-star" aria-hidden="true"></i>
  <% end %>
  <i class="fa fa-star-half-o" aria-hidden="true"></i>
  <% (4 - set_grade(user, flat).floor).times do %>
    <i class="fa fa-star-o" aria-hidden="true"></i>
  <% end %>

<% end %>
