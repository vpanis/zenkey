<% if !@bookings_pending.first.nil? %>
<div class="container reservation">
<h2><%= pluralize @bookings_pending.count, "dossier" %> en attente</h2>
<hr>
  <div class="row">
  <% @bookings_pending.each do |booking| %>
  <div class="col-xs-12 col-sm-3">
    <!-- insert <div class="card"> -->
    <div class="card-tenant text-center">
    <%= image_tag set_user_photo(booking.tenant), class: "card-tenant-avatar avatar-large-bordered" %>
      <div class="card-tenant-name"></div>
        <div class="card-tenant-description text-center">
          <h2><%= render 'flats/grade', booking: booking, user: booking.tenant, flat: @flat %></h2>
          <H2><%= set_fullname(booking.tenant) %></H2>
          <%#= booking.tenant.status %>
          <%#= booking.status %>
          <ul class="list-inline">
            <li><i class="fa fa-phone" aria-hidden="true"></i></li>
            <li>06 50 34 17 17</li>
          </ul>
          <ul class="list-inline">
            <li><i class="fa fa-envelope" aria-hidden="true"></i></li>
            <li><%= booking.tenant.email %></li>
          </ul>
          <a class="btn btn-primary" data-toggle="modal" data-target="#modal-booking-<%= booking.id %>">Voir candidat</a>
          <%= render 'flats/modals/modal_candidates_bookings', booking: booking, flat: @flat  %>
        <%= render 'flats/modals/modal_confirm_bookings', booking: booking, flat: @flat  %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
<% end %>



