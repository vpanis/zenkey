<div class="container padded top">
  <div class="row">
    <div class="form col-xs-12 col-md-6 col-md-offset-3">
      <div class="form-flat">
        <h2 class="text-center">Votre annonce</h2>
        <%= simple_form_for(@flat) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :title,  label: "Titre de l'annonce", required: true %>

            <div class="row">
              <div class="col-xs-9">
                <%= f.input :rental_type, label: "Type de location", collection: ["Location", "Colocation"], include_blank: true %>
              </div>
              <div class="col-xs-3">
                <%= f.input :furnished, label: "Meublé", input_html: { class: "hidden" } %>
              </div>
            </div>

            <!-- Availability date and minimum duration -->
            <div class="row">
              <div class="col-xs-12 col-md-6">
                <%= f.input :availability_date, required: true, as: :string, input_html: { class: "datepicker" } %>
              </div>
              <div class="col-xs-12 col-md-6">
                <%= f.input :min_duration, label: "Durée minimum (mois)", required: true %>
              </div>

            <%= f.input :photos, as: :attachinary %>

            <div class="row">
              <div class="col-xs-9">
                <%= f.input :address, label: "Adresse", required: true %>
              </div>
              <div class="col-xs-3">
                <%= f.input :is_address_public, label: "Afficher l'addresse", input_html: { class: "hidden" } %>
              </div>
            </div>

            <%= f.input :subway, label: "Métro à proximité", collection: @metro_stations %>
            <%= f.input :size, label: "Superficie", input_html: { min: '9', step: 'any' }, required: true %>
            <%= f.input :description, label: "Description", required: true %>

            <!-- Rent and rental costs -->
            <div class="row">
              <div class="col-xs-6 col-md-6">
                <%= f.input :rent, label: "Loyer", placeholder: "Montant du loyer", input_html: { min: '0', step: 'any' }, required: true, default: 0 %>
              </div>
              <div class="col-xs-6 col-md-6">
              <%= f.input :rental_costs, label: "Charges locatives", placeholder: "Montant des charges", input_html: { min: '0', step: 'any' }, required: true, default: 0 %>
              </div>
            </div>

            <%= f.input :floor, label: "Etage", collection: [0, 1, 2, 3, 4, 5, 6, 7], required: true %>

            <!-- Number of rooms and bedrooms -->
            <div class="row">
              <div class="col-xs-12 col-md-6">
                <%= f.input :rooms, label: "Nombre de pièces", required: true %>
              </div>
              <div class="col-xs-12 col-md-6">
                <%= f.input :bedrooms, label: "Nombre de chambres", required: true %>
              </div>
            </div>

            <!-- Plus -->
            <div class="flat-form-choices">
              <div class="checkbox">
                <input value="0" type="hidden" name="flat[balcony]">
                <input class="hidden " type="checkbox" value="1" name="flat[balcony]" id="flat_balcony">
                <label class="boolean optional flat-form-choice" for="flat_balcony">Balcon</label>
              </div>
              <div class="checkbox">
                <input value="0" type="hidden" name="flat[elevator]">
                <input class="hidden" type="checkbox" value="1" name="flat[elevator]" id="flat_elevator">
                <label class="boolean optional flat-form-choice" for="flat_elevator">Ascenseur</label>
              </div>
              <div class="checkbox">
                <input value="0" type="hidden" name="flat[separate_bathroom]">
                <input class="hidden" type="checkbox" value="1" name="flat[separate_bathroom]" id="flat_separate_bathroom">
                <label class="boolean optional flat-form-choice" for="flat_separate_bathroom">WC séparés</label>
              </div>
              <div class="checkbox">
                <input value="0" type="hidden" name="flat[parking]">
                <input class="hidden" type="checkbox" value="1" name="flat[parking]" id="flat_parking">
                <label class="boolean optional flat-form-choice" for="flat_parking">Parking</label>
              </div>
            </div>

          <!-- Form actions -->
          <div class="form-actions text-center">
            <%= f.button :submit, "Créer votre annonce", class:"btn btn-danger"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

