  <div class="row">
    <div class="form col-xs-12 col-md-6 col-md-offset-3">
      <h2 class="text-center">Votre annonce</h2>
      <%= simple_form_for(@flat) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :title,  label: "Titre de l'annonce", required: true %>
          <%= f.input :rental_type, label: "Type de location", required: true %>
          <%= f.input :photo, as: :attachinary %>
          <%= f.input :description, required: true %>
          <%= f.input :address, required: true %>
          <%= f.input :price, required: true %>
          <%= f.input :starting_day, required: true, as: :string, input_html: { class: "datepicker" } %>
        </div>
        <div class="form-actions text-center">
          <%= f.button :submit, "CrÃ©er votre annonce", class:"btn btn-danger"%>
        </div>
      <% end %>
    </div>
